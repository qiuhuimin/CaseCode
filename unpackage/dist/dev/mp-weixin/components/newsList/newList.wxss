pages {
  background-color: white;
}
.news-item {
  width: 100%;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1px solid #F4EEEF;
  padding: 6rpx 0 4rpx 10rpx;
}
.news-item .news-img {
    width: 30%;
    height: 200rpx;
}
.news-item .news-img image {
      width: 100%;
      height: 100%;
}
.news-item .information {
    width: 68%;
    padding: 10rpx 0 0 10rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-align-content: space-between;
            align-content: space-between;
}
.news-item .information .title {
      margin-bottom: 20rpx;
      font-size: 32rpx;
}
.news-item .information .time {
      width: 100%;
      font-size: 26rpx;
      color: #acb7bf;
}
.news-item .information .time text:nth-child(2) {
        margin-left: 100rpx;
}

