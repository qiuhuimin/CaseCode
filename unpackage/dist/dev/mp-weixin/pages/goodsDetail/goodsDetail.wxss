page {
  background-color: white;
}
.goodsDetail {
  width: 100%;
  height: auto;
}
.goodsDetail .detailImg {
    width: 98%;
    height: 700rpx;
    padding: 0 20rpx;
}
.goodsDetail .detailImg image {
      width: 100%;
      height: 700rpx;
}
.goodsDetail .info {
    width: 100%;
    height: 172rpx;
}
.goodsDetail .info .price {
      padding: 10rpx 10rpx;
      line-height: 70rpx;
}
.goodsDetail .info .price text:nth-child(1) {
        font-size: 38rpx;
        color: #d64f4a;
}
.goodsDetail .info .price text:nth-child(2) {
        font-size: 30rpx;
        color: #a2a2a2;
        text-decoration: line-through;
        margin-left: 30rpx;
}
.goodsDetail .info .title {
      padding: 0 10rpx;
      font-size: 34rpx;
      line-height: 50rpx;
}
.goodsDetail .line {
    width: 750rpx;
    height: 6rpx;
    background-color: #eee;
}
.goodsDetail .goodsnum {
    padding: 0 10rpx;
    font-size: 34rpx;
}
.goodsDetail .goodsnum view {
      line-height: 58rpx;
}
.goodsDetail .intro {
    padding: 0 10rpx;
    font-size: 34rpx;
    line-height: 58rpx;
    border-bottom: 1px solid #EEE;
}
.goodsDetail .goodsCont {
    font-size: 30rpx;
    padding: 10rpx 10rpx 50rpx 10rpx;
    line-height: 50rpx;
}
.goodsDetail .nav-bar {
    width: 100%;
    position: fixed;
    bottom: 0;
}

